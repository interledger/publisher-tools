{
  "name": "publisher-tools-cdn",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run -F publisher-tools-cdn --parallel \"/^dev:.*/\"",
    "dev:build": "pnpm build:clean && node --watch --watch-path=./src --watch-path=build.js --watch-path=../components build.js",
    "dev:server": "wrangler dev",
    "build": "node build.js",
    "build:clean": "del-cli 'dist/**' '!dist/.gitkeep'",
    "deploy": "wrangler deploy"
  },
  "devDependencies": {
    "@fontsource-variable/open-sans": "^5.2.7",
    "@fontsource-variable/roboto": "^5.2.8",
    "@fontsource/cookie": "^5.2.7",
    "@fontsource/titillium-web": "^5.2.8",
    "@shared/defines": "workspace:^",
    "@shared/types": "workspace:^",
    "@tools/components": "workspace:*",
    "directory-tree": "^3.5.2",
    "esbuild": "0.23.1",
    "esbuild-plugin-copy": "^2.1.1",
    "typescript": "^5.9.2",
    "wrangler": "^4.32.0"
  }
}
