{
  "name": "frontend",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build:init": "vite build --config vite.script.config.ts",
    "dev": "npm-run-all --parallel run:dev watch:script tailwind:script",
    "run:dev": "pnpm remix vite:dev",
    "watch:script": "pnpm run watch:init",
    "watch:init": "vite build --watch --config vite.script.config.ts",
    "tailwind:script": "npx tailwindcss ./tailwind.script.config.ts -o ./public/css/script.css --watch",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "pnpm build:init && remix-serve ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@conform-to/zod": "^1.2.2",
    "@headlessui/react": "^1.7.18",
    "@interledger/open-payments": "^6.13.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.19",
    "axios": "^1.6.5",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.10",
    "isbot": "^4.1.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-click-away-listener": "^2.2.3",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.1",
    "react-router-dom": "^6.27.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.4",
    "uuid": "^9.0.1",
    "vite": "^5.4.8",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.9.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "5.1.6",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.12.1"
}
